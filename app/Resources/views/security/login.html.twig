{% extends 'base.html.twig' %}

{% block body %}
    <h2 class = "text-center login-title">Login</h2>
    <div class = "container col-md-6 login-form">
        <form name="authenticate" action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="user_username">User</label>
                <input type="text" class="form-control" placeholder="Username" name ="_username" required >
            </div>
            <div class="form-group">
                <label for="user_password">Password</label>
                <input type="password" class="form-control" placeholder="Password" name ="_password"  required>
            </div>
            <input type = "hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <a class = "btn btn-default" href="{{ path('forum_index') }}">Cancel</a>
            <button type="submit" class="btn btn-primary login-btn">Submit</button>
        </form>
    </div>
{% endblock %}