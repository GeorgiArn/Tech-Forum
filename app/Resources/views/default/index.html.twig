{% extends 'base.html.twig' %}

{% block body %}
    <div class = "container">
        <div class = "row questions-list">
            {% for question in questions %}
                <div class = "col-md-6 col-sm-12 question">
                    <h2 class = "question-title">{{ question.title }}</h2>
                    <div class = "row">
                        <div class = "col-md-6">
                            <p class = "question-likes">Likes: {{ question.likers|length }}</p>
                        </div>
                        <div class = "col-md-6">
                            <p class = "question-category">Category: {{ question.category.name }}</p>
                        </div>
                    </div>
                    <div class = "row">
                        <div class ="col-md-6">
                            <p class = "date-asked">
                                Asked on: {{ question.dateAdded|date("F jS \\a\\t g:ia") }}
                            </p>
                        </div>
                        <div class ="col-md-6">
                            <p class = "question-author">
                                Author: <a href = "{{ path('user_profile', {'id': question.author.id}) }}">{{ question.author.fullName }}</a>
                            </p>
                        </div>
                    </div>
                    <div class = "read-more-btn">
                    <a class = "btn btn-secondary" href = "{{ path('question_view', {'id': question.id}) }}">View</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}