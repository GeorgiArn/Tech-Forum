{% extends 'base.html.twig' %}

{% block body %}
    <h2 class = "text-center register-title">Register</h2>
    <div class = "container col-md-6 register-form">
        <form name="register" action="{{ path('user_register') }}" method="post">
            <div class="form-group">
                <label for="user_email">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name ="user[email]" required>
            </div>
            <div class="form-group">
                <label for="user_full_name">Full Name</label>
                <input type="text" class="form-control" placeholder="Full Name" name ="user[email]" required>
            </div>
            <div class="form-group">
                <label for="user_username">Username</label>
                <input type="text" class="form-control" placeholder="Username" name ="user[username]" required>
            </div>
            <div class="form-group">
                <label for="user_password_second">Password</label>
                <input type="password" class="form-control" placeholder="Password" name ="user[password][first]" required>
            </div>
            <div class="form-group">
                <label for="user_password_first">Confirm Password</label>
                <input type="password" class="form-control" placeholder="Confirm Password" name ="user[password][second]" required>
            </div>
            <a class = "btn btn-default" href="{{ path('forum_index') }}">Cancel</a>
            <button type="submit" class="btn btn-primary register-btn">Register</button>
{#            {{  form_row(form._token) }}#}
        </form>
    </div>
{% endblock %}